#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# hack: will only work on OBS-created chroots
SOURCESDIRS=/usr/src/packages/SOURCES/ ~/

# decide on hard- and soft-float
ifeq (armhf, $(shell dpkg-architecture -qDEB_HOST_ARCH))
  FLOATOPT=hard
else
  FLOATOPT=soft
endif

%:
	dh $@

override_dh_auto_clean:
	rm -vf *.bin
	for file in *.pc; do if [ -e "$$file" ]; then rm -fv "$$file"; fi; done
	find . -type d -iname "imx-gpu-viv-*-*" -exec rm -rf {} \; || true
	rm -vrf debian/tmp-*
build: 

override_dh_auto_install:
	find $(SOURCESDIRS) -maxdepth 1 -iname "imx-gpu-viv-*-sfp.bin" -exec cp -v {} ./ \; -quit || true
	find $(SOURCESDIRS) -maxdepth 1 -iname "imx-gpu-viv-*-hfp.bin" -exec cp -v {} ./ \; -quit || true
	./install.sh --destdir $(CURDIR)/debian/tmp-fb --backend base --fhw $(FLOATOPT)
	./install.sh --destdir $(CURDIR)/debian/tmp-dfb --backend base --fhw $(FLOATOPT)
	./install.sh --destdir $(CURDIR)/debian/tmp-x11 --backend base --fhw $(FLOATOPT)
	./install.sh --destdir $(CURDIR)/debian/tmp-fb --backend fb --fhw $(FLOATOPT)
	./install.sh --destdir $(CURDIR)/debian/tmp-dfb --backend dfb --fhw $(FLOATOPT)
	./install.sh --destdir $(CURDIR)/debian/tmp-x11 --backend x11 --dridir /usr/lib/dri --fhw $(FLOATOPT)

override_dh_install:
	dh_install --sourcedir=debian/tmp-fb --package=gpu-viv-bin-fb
	dh_install --sourcedir=debian/tmp-fb --package=gpu-viv-bin-fb-dev
	dh_install --sourcedir=debian/tmp-dfb --package=gpu-viv-bin-dfb
	dh_install --sourcedir=debian/tmp-dfb --package=gpu-viv-bin-dfb-dev
	dh_install --sourcedir=debian/tmp-x11 --package=gpu-viv-bin-x11
	dh_install --sourcedir=debian/tmp-x11 --package=gpu-viv-bin-x11-dev

override_dh_shlibdeps:
	# it will fail if it can not find a shared-library
	# so, either add required libs to build-depends, or leave it for now
	#dh_shlibdeps -- --ignore-missing-info
