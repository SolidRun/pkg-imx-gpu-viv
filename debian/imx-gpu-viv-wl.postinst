#!/bin/sh

# handle alternatives
if [ "x$1" = "xconfigure" ]; then
	update-alternatives \
		--install /usr/lib/galcore/libGAL.so vivante-gal /usr/lib/galcore/libGAL-x11.so 30 \
		--slave /usr/lib/galcore/libGAL_egl.so vivante-gal-egl /usr/lib/galcore/libGAL_egl.x11.so \
		--slave /usr/lib/galcore/libEGL.so.1.0 vivante-egl /usr/lib/galcore/libEGL-x11.so \
		--slave /usr/lib/galcore/libGLESv2.so.2 vivante-gles2 /usr/lib/galcore/libGLESv2-x11.so \
		--slave /usr/lib/galcore/libVIVANTE.so vivante-vivante /usr/lib/galcore/libVIVANTE-x11.so
fi

# force-reinstall/repair symlinks
ln -sf libEGL.so.1 /usr/lib/galcore/libEGL.so
ln -sf libEGL.so.1.0 /usr/lib/galcore/libEGL.so.1
ln -sf libEGL.so.1.0 /usr/lib/galcore/libEGL.so.1.0.0
ln -sf libGLESv2.so.2 /usr/lib/galcore/libGLESv2.so
ln -sf libGLESv2.so.2 /usr/lib/galcore/libGLESv2.so.2.0.0

#DEBHELPER#

exit 0
