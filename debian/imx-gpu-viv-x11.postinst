#!/bin/sh

# handle alternatives
if [ "x$1" = "xconfigure" ]; then
	update-alternatives \
		--install /usr/lib/galcore/libGAL.so vivante-gal /usr/lib/galcore/x11/libGAL.so 40 \
		--slave /usr/lib/galcore/libGAL_egl.so vivante-gal-egl /usr/lib/galcore/x11/libGAL_egl.so \
		--slave /usr/lib/galcore/libEGL.so.1.0 vivante-egl /usr/lib/galcore/x11/libEGL.so \
		--slave /usr/lib/galcore/libGLESv2.so.2 vivante-gles2 /usr/lib/galcore/x11/libGLESv2.so \
		--slave /usr/lib/galcore/libVIVANTE.so vivante-vivante /usr/lib/galcore/x11/libVIVANTE.so
fi

# force-reinstall/repair symlinks
ln -sf libEGL.so.1 /usr/lib/galcore/libEGL.so
ln -sf libEGL.so.1.0 /usr/lib/galcore/libEGL.so.1
ln -sf libEGL.so.1.0 /usr/lib/galcore/libEGL.so.1.0.0
ln -sf libGLESv2.so.2 /usr/lib/galcore/libGLESv2.so
ln -sf libGLESv2.so.2 /usr/lib/galcore/libGLESv2.so.2.0.0

#DEBHELPER#

exit 0
